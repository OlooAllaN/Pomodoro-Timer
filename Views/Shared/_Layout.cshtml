<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pomodoro</title>
    <link rel="stylesheet" href="~/css/lib/vanilla-semantic/css/vanilla-semantic-min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/xtag/xtag.js"></script>
   </head>
<body>
    <header>
        <div class="ui menu">
            <div class="header item">
                <a asp-area="" asp-controller="Home" asp-action="Index">Pomodoro</a>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/vanilla-semantic/js/vanilla-semantic-min.js"></script>
    <script src="~/js/components/x-pomodoro.js"></script>
    <script src="~/js/components/x-animate.js"></script>
    <script src="~/js/components/x-control.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
